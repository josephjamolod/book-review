{
  "compilerOptions": {
    "target": "ES2020", // Adjust as per your requirements
    "module": "commonjs",
    "outDir": "./dist", // Output directory
    "rootDir": "./", // Source directory is the root
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"], // Include all TypeScript files in the project
  "exclude": ["node_modules"]
}

